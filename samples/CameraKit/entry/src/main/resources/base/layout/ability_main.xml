<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:layout"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    >

    <Button
        ohos:id="$+id:button_create_camera"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="#F76543"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Get Camera"
        ohos:text_size="50"
        />

    <Button
        ohos:id="$+id:button_single_capture"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="#F76543"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Single Capture"
        ohos:text_size="50"
        />
</DirectionalLayout>