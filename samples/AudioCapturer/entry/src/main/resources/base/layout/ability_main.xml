<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="horizontal">

    <Button
        ohos:id="$+id:button_start"
        ohos:height="match_content"
        ohos:width="0"
        ohos:background_element="#F76543"
        ohos:layout_alignment="vertical_center"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Start"
        ohos:text_size="50"
        ohos:weight="1"
        />

    <Button
        ohos:id="$+id:button_stop"
        ohos:height="match_content"
        ohos:width="0"
        ohos:background_element="#F76543"
        ohos:layout_alignment="vertical_center"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Stop"
        ohos:text_size="50"
        ohos:weight="1"
        />
</DirectionalLayout>