<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="$float:seek_bar_height"
    ohos:width="match_parent">

    <Text
        ohos:id="$+id:current_time"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_start="true"
        ohos:end_margin="6vp"
        ohos:text_color="white"
        ohos:text_size="10fp"
        ohos:vertical_center="true"/>

    <Slider
        ohos:id="$+id:seek_bar"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_instruct_element="$color:seek_bar_background_instruct_color"
        ohos:left_of="$id:end_time"
        ohos:progress_element="$color:seek_bar_progress_color"
        ohos:right_of="$id:current_time"
        ohos:thumb_element="$graphic:shape_slider_thumb"
        ohos:vertical_center="true"
        ohos:vice_progress_element="$color:seek_bar_vice_progress_color"/>

    <Text
        ohos:id="$+id:end_time"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:align_parent_end="true"
        ohos:start_margin="6vp"
        ohos:text_color="white"
        ohos:text_size="10fp"
        ohos:vertical_center="true"/>
</DependentLayout>