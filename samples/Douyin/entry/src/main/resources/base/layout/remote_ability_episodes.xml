<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:clickable="true"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:id="$+id:episodes_root"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:background_element="$graphic:background_ability_episodes">
        <DependentLayout
            ohos:id="$+id:episodes_header"
            ohos:height="56vp"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:alignment="center">
            <Text
                ohos:id="$+id:episodes_video_name"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:align_parent_start="true"
                ohos:start_margin="24vp"
                ohos:text=""
                ohos:text_alignment="left|vertical_center"
                ohos:text_color="$color:default_black_color"
                ohos:text_size="18fp"
                ohos:truncation_mode="ellipsis_at_end"/>
            <DirectionalLayout
                ohos:id="$+id:episodes_quality_parent"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:align_parent_end="true"
                ohos:alignment="center"
                ohos:end_margin="12vp"
                ohos:orientation="horizontal">
                <Text
                    ohos:id="$+id:episodes_quality"
                    ohos:height="match_parent"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_button_click"
                    ohos:text=""
                    ohos:text_alignment="center"
                    ohos:text_color="$color:default_black_color"
                    ohos:text_size="14fp"/>
                <Image
                    ohos:id="$+id:episodes_quality_select"
                    ohos:height="18vp"
                    ohos:width="18vp"
                    ohos:end_margin="12vp"
                    ohos:image_src="$media:ic_down_arrow"
                    ohos:layout_alignment="center"
                    ohos:scale_mode="stretch"/>
                <Image
                    ohos:id="$+id:episodes_close"
                    ohos:height="$float:default_image_size"
                    ohos:width="$float:default_image_size"
                    ohos:background_element="$graphic:background_button_click"
                    ohos:image_src="$media:ic_close_panel"
                    ohos:layout_alignment="center"
                    ohos:scale_mode="stretch"/>
            </DirectionalLayout>
        </DependentLayout>
        <TableLayout
            ohos:id="$+id:all_episodes_table"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:episodes_header"
            ohos:column_count="6"
            ohos:end_padding="8vp"
            ohos:start_padding="16vp">
        </TableLayout>
        <DirectionalLayout
            ohos:id="$+id:video_quality_list_parent"
            ohos:height="match_content"
            ohos:width="156vp"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:background_episodes_quality"
            ohos:below="$id:episodes_header"
            ohos:end_margin="24vp"
            ohos:end_padding="24vp"
            ohos:start_padding="24vp">
            <ListContainer
                ohos:id="$+id:video_quality_list"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:bottom_margin="4vp"
                ohos:clickable="true"
                ohos:layout_alignment="center"
                ohos:top_margin="4vp"/>
        </DirectionalLayout>

    </DependentLayout>
</DependentLayout>