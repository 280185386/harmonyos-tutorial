<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:clickable="true"
    ohos:end_padding="$float:default_margin"
    ohos:start_padding="$float:default_margin"
    ohos:visibility="invisible">
    <DirectionalLayout
        ohos:height="210vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:background_element="$graphic:background_ability_devices"
        ohos:bottom_margin="4vp"
        ohos:orientation="vertical">
        <Text
            ohos:height="56vp"
            ohos:width="match_parent"
            ohos:start_margin="24vp"
            ohos:text="$string:control_equipment_select"
            ohos:text_alignment="vertical_center"
            ohos:text_color="$color:default_black_color"
            ohos:text_size="20vp"/>
        <DependentLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:start_margin="24vp">
            <Image
                ohos:id="$+id:local_device_item_icon"
                ohos:height="$float:default_image_size"
                ohos:width="$float:default_image_size"
                ohos:end_margin="12vp"
                ohos:image_src="$media:ic_device_phone"
                ohos:scale_mode="stretch"
                ohos:top_margin="13vp"/>
            <Text
                ohos:id="$+id:local_device_item_name"
                ohos:height="49vp"
                ohos:width="160vp"
                ohos:layout_alignment="vertical_center"
                ohos:right_of="$id:local_device_item_icon"
                ohos:text="$string:local_machine"
                ohos:text_color="$color:default_black_color"
                ohos:text_size="16vp"/>
            <Image
                ohos:id="$+id:local_device_item_radio"
                ohos:height="$float:default_image_size"
                ohos:width="$float:default_image_size"
                ohos:align_parent_right="true"
                ohos:end_margin="$float:default_margin"
                ohos:image_src="$media:ic_radio_empty"
                ohos:scale_mode="stretch"
                ohos:top_margin="13vp"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:start_margin="24vp">
            <Image
                ohos:id="$+id:remote_device_item_icon"
                ohos:height="$float:default_image_size"
                ohos:width="$float:default_image_size"
                ohos:end_margin="12vp"
                ohos:scale_mode="stretch"
                ohos:top_margin="13vp"/>
            <Text
                ohos:id="$+id:remote_device_item_name"
                ohos:height="49vp"
                ohos:width="160vp"
                ohos:layout_alignment="vertical_center"
                ohos:right_of="$id:remote_device_item_icon"
                ohos:text_color="$color:default_black_color"
                ohos:text_size="16vp"/>
            <Image
                ohos:id="$+id:remote_device_item_radio"
                ohos:height="$float:default_image_size"
                ohos:width="$float:default_image_size"
                ohos:align_parent_right="true"
                ohos:end_margin="$float:default_margin"
                ohos:image_src="$media:ic_radio_empty"
                ohos:scale_mode="stretch"
                ohos:top_margin="13vp"/>
        </DependentLayout>
        <Text
            ohos:id="$+id:sound_equipment_cancel"
            ohos:height="27vp"
            ohos:width="match_parent"
            ohos:text="$string:control_equipment_select_cancle"
            ohos:text_alignment="center"
            ohos:text_color="$color:default_black_color"
            ohos:text_size="16vp"
            ohos:top_margin="18vp"/>
    </DirectionalLayout>
</DependentLayout>
