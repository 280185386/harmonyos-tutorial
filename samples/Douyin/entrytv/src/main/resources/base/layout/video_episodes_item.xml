<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="198vp"
    ohos:end_margin="16vp"
    ohos:focus_border_enable="true"
    ohos:focus_border_width="2vp"
    ohos:focusable="focus_enable">
    <DependentLayout
        ohos:id="$+id:video_list_item_preview_layout"
        ohos:height="112vp"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:id="$+id:video_list_item_preview"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:background_element="$graphic:background_episodes_setting_item">
            <Image
                ohos:id="$+id:video_list_item_preview_image"
                ohos:height="match_parent"
                ohos:width="match_parent"/>
        </DirectionalLayout>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_bottom="true">
            <Text
                ohos:id="$+id:video_list_item_total_time"
                ohos:height="30vp"
                ohos:width="100vp"
                ohos:align_parent_right="true"
                ohos:background_element="#7F000000"
                ohos:bottom_margin="8vp"
                ohos:end_margin="8vp"
                ohos:text_alignment="center"
                ohos:text_color="#FFFFFF"
                ohos:text_size="14fp"/>
        </DependentLayout>
    </DependentLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:video_list_item_preview_layout"
        ohos:top_margin="8vp">
        <Text
            ohos:id="$+id:video_list_item_desc"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:max_text_lines="2"
            ohos:multiple_lines="true"
            ohos:text_color="#99FFFFFF"
            ohos:text_size="14fp"
            ohos:truncation_mode="ellipsis_at_end"/>
    </DirectionalLayout>
</DependentLayout>