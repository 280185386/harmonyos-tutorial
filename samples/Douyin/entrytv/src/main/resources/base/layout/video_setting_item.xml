<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:bottom_margin="24vp"
    ohos:focusable="focus_enable">
    <DirectionalLayout
        ohos:id="$+id:video_setting_option"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_top="true"
        ohos:bottom_margin="8vp">
        <Text
            ohos:id="$+id:video_setting_option_name"
            ohos:height="40vp"
            ohos:width="150vp"
            ohos:focusable="focus_enable"
            ohos:text_color="#66FFFFFF"
            ohos:text_size="18fp"/>
    </DirectionalLayout>
    <ListContainer
        ohos:id="$+id:video_setting_option_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:video_setting_option"
        ohos:focusable="focus_enable"
        ohos:orientation="horizontal"/>
</DependentLayout>